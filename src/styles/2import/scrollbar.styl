/* Hide scrollbar for Chrome, Safari and Opera */
.scroll-hide::-webkit-scrollbar {
  display: none;
}

/* Hide scrollbar for IE, Edge and Firefox */
.scroll-hide {
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */
}


/* width */
.scrollbar-gradient::-webkit-scrollbar {
  width: 3px;
  height: 3px;
}

/* Track */
.scrollbar-gradient::-webkit-scrollbar-track {
  background: #f1f1f1; 
}
 
/* Handle */
.scrollbar-gradient::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #08FFC8, #28DF99);
}

/* Handle on hover */
.scrollbar-gradient::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #9055ff, #13e2da);; 
}